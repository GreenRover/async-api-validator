            "preCiDeploymentJob": "",
            "postCiDeploymentJob": ""
        },
        {
            "stageName": "api-validation-prod",
            "isOpenshiftDeploymentEnabled": true,
            "openshiftCluster": "aws_trs01p",
            "openshiftProject": "api-validation",
            "openshiftJenkinsCredentialsId": "DEVREL-api-validation-prod-token",
            "preCiDeploymentJob": "",
            "postCiDeploymentJob": ""
        }
    ],
    "steps": [
        {
            "stepType": "continuous",
            "isBuildEnabled": true,
            "branchNamePrefixes": [
                "feature",
                "private"
