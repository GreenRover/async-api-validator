{
    "mainBranch": "master",
    "docker": {
        "dockerFile": "Dockerfile",
        "artifactoryDockerRepo": "tms.docker",
        "openshiftAppName": "api-validation"
    },
    "helm": {
        "release": "api-validation",
        "chart": "api-validation"
    },
    "stages": [
        {
            "stageName": "api-validation-dev",
            "isOpenshiftDeploymentEnabled": true,
            "openshiftCluster": "aws_trs01t",
